<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Dog_Rejection_Due_to_Health_check_failure</fullName>
        <description>Dog Rejection Due to Health check failure</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Dog_Rejection_Email</template>
    </alerts>
    <alerts>
        <fullName>Dog_Vaccination_Due_Email_Alert</fullName>
        <description>Dog Vaccination Due Email Alert</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <type>campaignMemberDerivedOwner</type>
        </recipients>
        <recipients>
            <recipient>rameshi@atlasdog.org</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Vaccination_Due_Email_Alert</template>
    </alerts>
    <alerts>
        <fullName>Dog_is_about_to_be_14_months</fullName>
        <description>Dog is about to be 14 months</description>
        <protected>false</protected>
        <recipients>
            <recipient>molly@atlasdog.org</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/dog_turning_14mo</template>
    </alerts>
    <rules>
        <fullName>Dog turning 14</fullName>
        <actions>
            <name>Eligibility_reminder_for_Dog</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <formula>VarToday_Date__c &gt;= Dog_Eligible_by_DOB__c -30</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>Eligibility_reminder_for_Dog</fullName>
        <assignedToType>owner</assignedToType>
        <dueDateOffset>-30</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <offsetFromField>Dog__c.Dog_Eligible_by_DOB__c</offsetFromField>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>Eligibility reminder for : {!Dog.Name}</subject>
    </tasks>
    <tasks>
        <fullName>Eligibility_reminder_for_Dog_Name</fullName>
        <assignedTo>molly@atlasdog.org</assignedTo>
        <assignedToType>user</assignedToType>
        <description>{!Dog.Name} is eligible to onboar</description>
        <dueDateOffset>-30</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <offsetFromField>Dog__c.Dog_Eligible_by_DOB__c</offsetFromField>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>Eligibility reminder for : {!Dog.Name}</subject>
    </tasks>
    <tasks>
        <fullName>Vaccination_reminder</fullName>
        <assignedTo>molly@atlasdog.org</assignedTo>
        <assignedToType>user</assignedToType>
        <dueDateOffset>-30</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <offsetFromField>Dog__c.Most_Recent_Distemper_Vaccine__c</offsetFromField>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>Vaccination reminder for : {!Dog.Name}</subject>
    </tasks>
</Workflow>
