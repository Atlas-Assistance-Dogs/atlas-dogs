public with sharing class MailService {
    public MailService() {
    }

    public void sendMail(
        string[] to,
        string[] cc,
        string repMail,
        string subject,
        string body
    ) {
        Messaging.SingleEmailMessage email = new Messaging.SingleEmailMessage();

        email.setToAddresses(to);
        if (cc != null && cc.size() != 0)
            email.setCcAddresses(cc);
        if (repmail != null && repmail != '')
            email.setInReplyTo(repMail);
        email.setSubject(subject);

        email.setHtmlBody(
            'Hello, <br/><br/>This is the test mail that you generated. <br/>The Email Id for which this mail was generated by ' +
            string.join(to, ',') +
            '<br/><br/>Regards<br/> Developer'
        );
        try {
            Messaging.sendEmail(
                new List<Messaging.SingleEmailMessage>{ email }
            );
        } catch (exception e) {
            apexpages.addmessage(
                new apexpages.message(apexpages.severity.error, e.getMessage())
            );
        }
    }
}
